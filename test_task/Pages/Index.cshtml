@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" id="div">

    <form method="post">
        <input type="hidden" id="x" name="x" />
        <input type="hidden" id="y" name="y" />
        <input type="hidden" id="time" name="time" />
        <button type="submit">Отправить координаты курсора</button>
    </form>
</div>


<script type="text/javascript">
 function updateCursorPos(event) {
            document.getElementById('x').value = event.clientX; // Считываем координаты по X
            document.getElementById('y').value = event.clientY; // Считываем координаты по Y
            document.getElementById('time').value = new Date().toISOString(); // Считываем время
        }

        // Добавляем обработчик события на движение мыши
        document.addEventListener('mousemove', updateCursorPos);
    
</script>
